<div class="container mt-4">
  <div class="row">
    <h1>All our flats (<%= @flats.count %>)</h1>
    <% @flats.each do |flat| %>
      <div class="col-6">
        <div class="card bg-light mb-4">
        <div class="card-body">
          <h4 class='card-title mb-3'><%= flat.name %></h4>
          <p class="card-subtitle mb-3"><%= flat.address %></p>
          <p>
            <%= icon('fas', 'users') %>
             <%= flat.number_of_guests %>
            <%= icon('fas', 'euro-sign') %>
            <%= flat.price_per_night %>
          </p>
        </div>
        <div class="card-footer bg-white">
          <%= link_to 'more info', flat_path(flat) %>
          <%= link_to 'edit', edit_flat_path(flat), class: 'text-warning' %>
          <%= link_to 'remove', flat_path(flat), method: :delete, data: { confirm: "Whoa! Are you sure?"}, class: 'text-danger' %>
        </div>
      </div>
      </div>
    <% end %>
  </div>
</div>
